<form class='container dash-form'>
  <div class='my-3'>
    <input type='text' id='post-title' placeholder='Title' />
    <input type='text' id='post-body' placeholder='Body' />
    <input type='text' id='post-deadline' placeholder='Deadline' />
    <input type='text' id='post-requirements' placeholder='Requirements' />
    <select name='tag' id='tag'>
      <option value='animal'>Animal</option>
      <option value='health'>Health</option>
      <option value='sports'>Sports</option>
      <option value='arts'>Arts</option>
      <option value='home repair'>Home repair</option>
    </select>
    <button id='add-post-btn'>Add Post</button>
  </div>
  <div>
    <select name='tag' id='tag-options'>
      <option value='animal'>Animal</option>
      <option value='health'>Health</option>
      <option value='sports'>Sports</option>
      <option value='arts'>Arts</option>
      <option value='home repair'>Home repair</option>
    </select>
    <button id='find-post-btn'>Find By Tag</button>
  </div>
</form>
<div id='posts-container' class='container'>
  {{#each posts as |post|}}
    <div>
      <article class='card dash-card'>
        <div class='card-header'>
          <a href='/helppost/{{post.id}}'>{{post.title}}</a>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">{{post.body}}</li>
          <li class="list-group-item"> Posted By:
          {{post.username}}</li>
          <li class="list-group-item">  Created on:
          {{format_date post.createdAt}}</li> 
          <li class="list-group-item">Requirements:
          {{post.requirements}}</li>
          <li class="list-group-item">When:
          {{post.deadline}}</li>
          <li class="list-group-item">Tag:
          {{post.tag}}</li>
        </ul>
      </article>
    </div>
  {{/each}}
</div>